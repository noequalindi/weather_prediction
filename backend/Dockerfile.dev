# backend/Dockerfile.dev
FROM continuumio/miniconda3

RUN conda install -y -c conda-forge \
    python-dotenv \
    onnxruntime \
    fastapi \
    uvicorn \
    python-multipart \
    pandas \
    sqlalchemy \
    psycopg2-binary \
    boto3  \
    scikit-learn \
    requests

WORKDIR /app

COPY ../models /models
COPY ../app /app 
COPY .env /app/.env 

ENV RUNNING_IN_DOCKER=True

CMD ["./uvicorn.sh"]